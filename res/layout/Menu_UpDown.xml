<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:background="@drawable/shell">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="7"
        android:rowCount="6">

        <TextView
            android:id="@+id/name_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="迈世通"
            android:textSize="30sp"
            android:textColor="#ff000000"
            android:layout_marginLeft="80dp"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowSpan="2"
            android:layout_row="0"
            android:layout_columnSpan="2" />

        <TextView
            android:id="@+id/data_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="正在输注"
            android:textSize="28sp"
            android:textColor="#ff000000"
            android:layout_marginLeft="80dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <TextView
            android:id="@+id/data_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="U-100"
            android:textSize="28sp"
            android:textColor="#ff000000"
            android:layout_marginLeft="10dp"
            android:layout_row="2"
            android:layout_column="2"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="^"
            android:textSize="28sp"
            android:id="@+id/UP"
            android:layout_marginLeft="60dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_rowSpan="2"
            android:layout_marginTop="-7dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textSize="28sp"
            android:id="@+id/OK"
            android:layout_marginLeft="50dp"
            android:layout_row="2"
            android:layout_rowSpan="2"
            android:layout_column="4"
            android:layout_marginTop="-7dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/data_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="定时大剂量"
            android:textSize="30sp"
            android:textColor="#ff000000"
            android:layout_marginLeft="80dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <TextView
            android:id="@+id/data_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="0.00U"
            android:textSize="30sp"
            android:textColor="#ff000000"
            android:layout_marginLeft="15dp"
            android:layout_row="3"
            android:layout_column="2"/>

       <TextView
            android:id="@+id/data_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="12:30-13:00"
            android:textSize="28sp"
            android:textColor="#ff000000"
            android:layout_marginLeft="80dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <TextView
            android:id="@+id/data_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="1.00U"
            android:textSize="28sp"
            android:textColor="#ff000000"
            android:layout_marginLeft="15dp"
            android:layout_row="4"
            android:layout_column="2"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V"
            android:textSize="28sp"
            android:id="@+id/DOWN"
            android:layout_marginLeft="60dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_rowSpan="2"
            android:layout_marginTop="-10dp"
            android:textStyle="bold" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:textSize="28sp"
            android:id="@+id/MENU"
            android:layout_marginLeft="35dp"
            android:layout_row="4"
            android:layout_column="4"
            android:layout_rowSpan="2"
            android:layout_marginTop="-10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text=""
            android:textSize="60sp"
            android:textColor="#ff000000"
            android:layout_marginLeft="10dp"
            android:layout_row="5"
            android:layout_column="0"/>



    </GridLayout>
</LinearLayout>
